[Unit]
Description=Apple Wallet Service for %i
Requires=apple-daemon@%i.service
After=apple-daemon@%i.service

[Service]
Type=simple
Environment=APPLE_ROOT=/home/%i/.apple/mainnet
ExecStart=/opt/apple/start_wallet
ExecStartPost=/bin/bash -c '(while ! nc -z -v -w1 localhost 9256 2>/dev/null; do echo "Waiting for the wallet to listen on port 9256..."; sleep 1; done); sleep 1'
User=%i
Group=%i
LimitNOFILE=1048576
LimitNPROC=1048576

[Install]
WantedBy=multi-user.target
